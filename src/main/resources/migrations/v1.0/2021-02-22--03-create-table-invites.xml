<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="7" author="dev">
        <createTable tableName="invites">
            <column name="id" type="bigint">
                <constraints primaryKey="true"
                             nullable="false"/>
            </column>

            <column name="from_user_id" type="bigint">
                <constraints referencedColumnNames="id"
                             referencedTableName="users"
                             foreignKeyName="FK_from_user_id_invites"/>
            </column>

            <column name="to_user_id" type="bigint">
                <constraints referencedColumnNames="id"
                             referencedTableName="users"
                             foreignKeyName="FK_to_user_id_invites"/>
            </column>

            <column name="board_id" type="bigint">
                <constraints referencedColumnNames="id"
                             referencedTableName="boards"
                             foreignKeyName="FK_board_id_invites"/>
            </column>
            
            <column name="status" type="varchar(64)">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="datetime">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="datetime">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>